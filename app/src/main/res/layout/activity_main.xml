<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Calculadora Basica"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/Button_suma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suma"
            android:background="#E69696"
            android:textColorLink="#E69696" />

        <Button
            android:id="@+id/Button_resta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="resta"
            android:background="#E69696"
            android:textColorLink="#E69696" />

        <Button
            android:id="@+id/Button_multiplicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="multiplicación"
            android:background="#E69696"
            android:textColorLink="#E69696" />

        <Button
            android:id="@+id/Button_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="división"
            android:background="#E69696"
            android:textColorLink="#E69696" />

        <Button
            android:id="@+id/ButtonPesosDolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Metros a Pies"
            android:background="#E69696"
            android:textColorLink="#E69696" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>